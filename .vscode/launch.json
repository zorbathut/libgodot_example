{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Driver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/driver/driver",
            "cwd": "${workspaceFolder}/driver",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/godot/bin:${env:LD_LIBRARY_PATH}"
                }
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
